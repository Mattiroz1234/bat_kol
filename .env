# ---- MongoDB ----
MONGO_URL=mongodb://mongo:27017
MONGO_DB=matchmaking

# ---- Elasticsearch ----
ES_URL=http://elasticsearch:9200
ES_INDEX_PROFILES=profiles_v1
ES_ALIAS_PROFILES=profiles_active

# ---- Kafka ----
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=matchmaking-app
TOPIC_PROFILES_CREATED=profiles.created
TOPIC_PROFILES_ENRICHED=profiles.enriched
TOPIC_PREFERENCES_UPDATED=preferences.updated
TOPIC_FEEDBACK_EVENTS=feedback.events

# ---- App ----
APP_ENV=dev
LOG_LEVEL=INFO
ALLOW_ORIGINS=["*"]
SERVICE_NAME=api

# ---- Feature flags ----
ENABLE_EMBEDDINGS=false
ENABLE_GEO_FILTER=true
ENABLE_RECIPROCAL_CHECK=true
